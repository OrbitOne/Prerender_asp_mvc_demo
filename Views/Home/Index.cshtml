@{
    ViewBag.Title = "Prerender ASP.NET MVC  demo page";
}
@section featured {
    <section class="featured">
        <div class="content-wrapper">
            <hgroup class="title">
                <h1>@ViewBag.Title.</h1>
                <h2>@ViewBag.Message</h2>
            </hgroup>
        </div>
    </section>
}

<div ng-controller="demoCtr">
    <h2>Prerender ASP.NET MVC demo page</h2>

    <p>use angularjs ng-repeat</p>
    <ul>
        <li ng-repeat="item in language">{{item}}</li>
    </ul>
    <script type="text/javascript">
        function demoCtr($scope) {
            $scope.language = ["C#", "javascript", "java", "python", "ruby"];
        }
    </script>
</div>
